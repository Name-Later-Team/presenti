{
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.d.ts",
        "*.js"
      ],
      "rules": {
        "@typescript-eslint/no-shadow": 1,
        "no-shadow": 1,
        "no-undef": "off",
        "eqeqeq": "off",
        "@typescript-eslint/no-unused-vars": 2,
        "no-unused-vars": "error",
        "no-debugger": "off",
        "prefer-const": 1
      }
    }
  ]
}